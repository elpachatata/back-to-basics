//Exercise B
function boolChecker(bool) {
    if (typeof bool === "boolean") {
      return "You've given me a bool, thanks!";
    }
    return "No bool, not cool.";
  }
  console.log(boolChecker(true));

  //Exercise C
  function numberChecker(num) {   //we define our function called numberChecker and we assign a parameter called num
    if (num > 20) {  // we create an if statement - if the parameter we assigned earlier is grater than 20 
      return `${num} is greater than 20`;  // it will return the orange sentance
    } else if (num === 20) { // if num is not over 20, it will pass to the next iteration; here, if num equals 20
      return `${num} is equal to 20`;
    } else if (num < 20) {
      return `${num} is less than 20`;// if num is not under 20, it will pass to the next iteration
    } else { //if it`s not a number
      return `${num} isn't even a number :(`; // it will return the orange sentence
    } //end of statement
  } //end of function

  // Exercise D
  function mood(a){
    if(a === "Happy"){
    return "Good job, you're doing great!";
}
else if (a === "Sad"){
return "Every cloud has a silver lining"
}
else if (a>0) {
return "Beep beep boop";
} else {
return "I'm sorry, I'm still learning about feelings!"
}
const result2=mood("Happy")
console.log(result2);
}
